<% layout('layouts/boilerplate')%>

<div class="vh d-flex align-items-center justify-content-center">
  <div class="b-show-sm">
    <h1 class="fs-1 text-center text-primary">Sign in</h1>
    <form
      action="/login"
      method="POST"
      class="validated-form container"
      novalidate
    >
      <div class="mb-3 col-sm">
        <label for="ursername" class="form-label">Username</label>
        <input
          class="form-control"
          placeholder="Place URL here"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3 col-sm">
        <label for="password" class="form-label">password</label>
        <input
          class="form-control"
          placeholder="Place URL here"
          type="text"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <div class="opts">
      Don't have an account? <a href="/register">Signup</a>
    </div>
  </div>
</div>
