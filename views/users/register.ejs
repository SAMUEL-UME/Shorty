<% layout('layouts/boilerplate')%>

<div class="vh d-flex align-items-center justify-content-center">
  <div class="b-show-sm">
    <h1 class="text-center text-primary">Sign up</h1>
    <form action="/register" method="POST" class="validated-form" novalidate>
      <div class="mb-3 col-sm">
        <label for="ursername" class="form-label">Username</label>
        <input
          class="form-control"
          placeholder="Place URL here"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3 col-sm">
        <label for="email" class="form-label">Email</label>
        <input
          class="form-control"
          placeholder="Place URL here"
          type="text"
          id="email"
          name="email"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3 col-sm">
        <label for="password" class="form-label">password</label>
        <input
          class="form-control"
          placeholder="Place URL here"
          type="text"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button type="submit" class="btn btn-primary">submit</button>
    </form>
    <div class="opts">
      Already have an accountt? <a href="/login">Signin</a>
    </div>
  </div>
</div>
