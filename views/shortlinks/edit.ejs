<% layout('layouts/boilerplate')%>
<script>

  const shortUrl = <%- JSON.stringify(shortUrl)%>
</script>

<div
  class="container d-flex flex-column justify-content-center .align-items-center vh-100"
  id="frm-pg"
>
  <div class="b-show animate__animated animate__fadeIn">
    <h1 class="text-center text-primary mb-5">Edit Shorty</h1>
    <form
      action="/shorty/edit/<%=shortUrl._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form wd"
    >
      <div class="row">
        <div class="mb-3 col-sm">
          <input
            class="form-control"
            placeholder="Place URL here"
            type="text"
            id="full"
            value="<%= shortUrl .full %>"
            name="shortlink[full]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3 col-sm">
          <input
            class="form-control mr-2 col"
            type="text"
            id="short"
            placeholder="Alias"
            value="<%= shortUrl.short %>"
            name="shortlink[short]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <textarea
          class="form-control text-start"
          type="text"
          id="description"
          placeholder="Description"
          name="shortlink[description]"
          required
        >
<%=shortUrl.description %>
      </textarea
        >
        <div class="valid-feedback">Make it brief.</div>
      </div>
      <div class="mb-3">
        <button class="btn bg-primary text-light">
          Trim Url
          <img
            src="/images/magic wand.svg"
            class="animate__animated animate__tada"
          />
        </button>
      </div>
    </form>
  </div>
</div>
